<div class="container">
    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h1>My Tickets</h1>
            <a href="/tickets/create" class="btn btn-primary">Create New Ticket</a>
        </div>
    </div>

    <% if (locals.error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <% if (tickets && tickets.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ticket #</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Created</th>
                                        <th>Last Updated</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tickets.forEach(ticket => { %>
                                        <tr>
                                            <td>#<%= ticket._id %></td>
                                            <td><%= ticket.title %></td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    ticket.status === 'Open' ? 'warning' : 
                                                    ticket.status === 'In Progress' ? 'info' : 
                                                    'success' %>">
                                                    <%= ticket.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    ticket.priority === 'high' ? 'danger' : 
                                                    ticket.priority === 'medium' ? 'warning' : 
                                                    'success' %>">
                                                    <%= ticket.priority 
                                                        ? ticket.priority.charAt(0).toUpperCase() + ticket.priority.slice(1) 
                                                        : 'Low' %> <!-- Default to 'Low' if priority is undefined -->
                                                </span>
                                            </td>
                                            <td><%= new Date(ticket.createdAt).toLocaleDateString() %></td>
                                            <td><%= new Date(ticket.updatedAt).toLocaleDateString() %></td>
                                            <td>
                                                <a href="/tickets/<%= ticket._id %>" class="btn btn-sm btn-info">View</a>
                                            </td>
                                            <td>
                                                <% if (ticket.status !== 'resolved') { %>
                                                    <form action="/tickets/<%= ticket._id %>/resolve" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-success">Resolve</button>
                                                    </form>
                                                <% } else { %>
                                                    <span class="badge bg-success">Resolved</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <!-- In the admin section of the ticket view -->
                                        <% if (locals.user.role === 'admin') { %>
                                            <div class="card mb-4">
                                                <div class="card-header">
                                                    <h5 class="mb-0">Update Status</h5>
                                                </div>
                                                <div class="card-body">
                                                    <form action="/tickets/<%= ticket._id %>/status" method="POST" class="d-flex gap-2">
                                                        <select class="form-select" name="status" required>
                                                            <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                                                            <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                                            <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-primary">Update</button>
                                                    </form>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <h4 class="text-muted">No tickets found</h4>
                            <p class="mb-4">You haven't created any support tickets yet.</p>
                            <a href="/tickets/create" class="btn btn-primary">Create Your First Ticket</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>