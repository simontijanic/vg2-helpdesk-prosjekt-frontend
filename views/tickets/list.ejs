<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
            <h1 class="h3 mb-3 mb-md-0">Mine Saker</h1>
            <a href="/tickets/create" class="btn btn-dark">Opprett Ny Sak</a>
        </div>
    </div>

    <% if (locals.error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0 p-md-3">
                    <% if (tickets && tickets.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tittel</th>
                                        <th>Status</th>
                                        <th class="d-none d-md-table-cell">Prioritet</th>
                                        <th class="d-none d-md-table-cell">Opprettet</th>
                                        <th>Handlinger</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tickets.forEach(ticket => { %>
                                        <tr>
                                            <td class="text-nowrap">#<%= ticket._id.toString().slice(-6) %></td>
                                            <td class="text-truncate" style="max-width: 150px;"><%= ticket.title %></td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    ticket.status === 'open' ? 'warning' : 
                                                    ticket.status === 'in-progress' ? 'info' : 
                                                    'success' %>">
                                                    <%= ticket.status === 'open' ? 'Åpen' : 
                                                        ticket.status === 'in-progress' ? 'Under arbeid' : 
                                                        'Løst' %>
                                                </span>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <span class="badge bg-<%= 
                                                    ticket.priority === 'high' ? 'danger' : 
                                                    ticket.priority === 'medium' ? 'warning' : 
                                                    'success' %>">
                                                    <%= ticket.priority === 'high' ? 'Høy' : 
                                                        ticket.priority === 'medium' ? 'Medium' : 
                                                        'Lav' %>
                                                </span>
                                            </td>
                                            <td class="d-none d-md-table-cell"><%= new Date(ticket.createdAt).toLocaleDateString('nb-NO') %></td>
                                            <td>
                                                <a href="/tickets/<%= ticket._id %>" class="btn btn-sm btn-dark">Se sak</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <h4 class="text-muted">Ingen saker funnet</h4>
                            <p class="mb-4">Du har ikke opprettet noen support-saker ennå.</p>
                            <a href="/tickets/create" class="btn btn-primary">Opprett Din Første Sak</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>