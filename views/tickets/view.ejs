<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Ticket #<%= ticket._id %></h3>
                    <span class="badge bg-<%= 
                        ticket.status === 'open' ? 'warning' : 
                        ticket.status === 'in-progress' ? 'info' : 
                        'success' %>">
                        <%= ticket.status.charAt(0).toUpperCase() + ticket.status.slice(1) %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h4><%= ticket.title %></h4>
                        <p class="text-muted">
                            Created by <%= ticket.creator.email %> on 
                            <%= new Date(ticket.createdAt).toLocaleDateString() %>
                        </p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <strong>Category:</strong> 
                            <%= ticket.category.charAt(0).toUpperCase() + ticket.category.slice(1) %>
                        </div>
                        <div class="col-md-6">
                            <strong>Priority:</strong> 
                            <span class="badge bg-<%= 
                                ticket.priority === 'high' ? 'danger' : 
                                ticket.priority === 'medium' ? 'warning' : 
                                'success' %>">
                                <%= ticket.priority.charAt(0).toUpperCase() + ticket.priority.slice(1) %>
                            </span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Description</h5>
                        <p><%= ticket.description %></p>
                    </div>

                    <% if (locals.user.role === 'admin') { %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Update Status</h5>
                            </div>
                            <div class="card-body">
                                <form action="/tickets/<%= ticket._id %>/status" method="POST" class="d-flex gap-2">
                                    <select class="form-select" name="status" required>
                                        <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                                        <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                        <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form>
                            </div>
                        </div>
                    <% } %>

                    <!-- History Section -->
                    <% if (ticket.history && ticket.history.length > 0) { %>
                        <div class="card mt-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Ticket History</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <% ticket.history.forEach(entry => { %>
                                        <li class="list-group-item">
                                            <small class="text-muted">
                                                <%= new Date(entry.timestamp).toLocaleString() %> - 
                                            </small>
                                            <%= entry.action %>
                                        </li>
                                    <% }); %>
                                </ul>
                            </div>
                        </div>
                    <% } %>

                    <!-- Comments Section -->
                    <div class="card mt-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Comments</h5>
                        </div>
                        <div class="card-body">
                            <% if (ticket.comments && ticket.comments.length > 0) { %>
                                <div class="comments-list">
                                    <% ticket.comments.forEach(comment => { %>
                                        <div class="comment mb-3 border-bottom pb-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <strong><%= comment.author.email %></strong>
                                                <small class="text-muted">
                                                    <%= new Date(comment.createdAt).toLocaleString() %>
                                                </small>
                                            </div>
                                            <p class="mb-0"><%= comment.text %></p>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <p class="text-muted text-center mb-4">No comments yet</p>
                            <% } %>

                            <!-- Add Comment Form -->
                            <form action="/tickets/<%= ticket._id %>/comments" method="POST" class="mt-4">
                                <div class="form-group">
                                    <label for="text" class="form-label">Add a Comment</label>
                                    <textarea 
                                        class="form-control" 
                                        id="text" 
                                        name="text" 
                                        rows="3" 
                                        required
                                        placeholder="Write your comment here..."
                                    ></textarea>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Add Comment</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="mt-4">
                        <% if (locals.user.role === 'admin') { %>
                            <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
                        <% } else { %>
                            <a href="/tickets" class="btn btn-outline-secondary">Back to My Tickets</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>