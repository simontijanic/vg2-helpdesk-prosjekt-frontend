<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header">
          <h3 class="mb-0">Registrer Deg</h3>
        </div>
        <div class="card-body">
          <% if (locals.error) { %>
          <div class="alert alert-danger" role="alert"><%= error %></div>
          <% } %>
          <form action="/register" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Fullt Navn</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
              <div class="form-text">Skriv inn ditt fulle navn</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">E-post</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
              <div class="form-text">Bruk en gyldig e-postadresse du har tilgang til</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Passord</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                minlength="6"
              />
              <div class="form-text">
                Passord m√• inneholde:
                <ul class="mb-0 small">
                  <li>Minst 6 tegn</li>
                </ul>
              </div>
            </div>
            <button type="submit" class="btn bg-dark text-white w-100">
              Registrer Deg
            </button>
          </form>
          <div class="mt-3 text-center">
            <p>Har du allerede en konto? <a href="/login">Logg inn her</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
